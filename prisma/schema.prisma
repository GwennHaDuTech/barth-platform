generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
id        String   @id @default(cuid())
  firstname String
  lastname  String
  email     String   @unique
  phone     String
  photo     String
  city      String
  zipCode   String?  // Ajouté (String car un code postal peut commencer par 0)
  cityPhoto String?  // Ajouté (URL de l'image de couverture)
  secondarySector String?
  instagram String?
  linkedin  String?
  tiktok    String?
  bio       String? @db.Text
  slug      String   @unique
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
    listings  Listing[]
}

model Listing {
  id        Int      @id @default(autoincrement())
  title     String
  price     String
  img       String
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id])
}