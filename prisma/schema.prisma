generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Agent {
  id        String   @id @default(cuid())
  firstname String
  lastname  String
  subdomain String   @unique
  name      String
  email     String   @unique
  photo     String?
  bio       String?
  phone     String?
  city      String?
  secondarySector String?  // Optionnel
  instagram       String?  // Optionnel
  linkedin        String?  // Optionnel
  tiktok          String?  // Optionnel
  listings  Listing[]
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}

model Listing {
  id        Int      @id @default(autoincrement())
  title     String
  price     String
  img       String
  agentId   String
  agent     Agent    @relation(fields: [agentId], references: [id])
}